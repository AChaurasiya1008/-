#include<stdio.h>
int
main () 
{
    int m,n,i;
    scanf("%d",&n);
m=n+2;   
for(i=1; i<=m; i++){
    
    int p=(m+1)/2;
    
    if(i<=p){
        for(int j=1; j<=p; j++){
            
            if (j<=i){
            printf("*");
           }
           
           else{
            printf(" ");   
           }
        }
    }
    else{
        
        int o=m-i+1;
        
        for(int j=1; j<=p; j++){
            
            if(j<=o){
                printf("*");
            }
            else{
               printf(" "); 
            }
                
        }
    
        
    }
    
    if(i==p){
       for(int j=1; j<=n; j++){
           printf("@");
       } 
    }
    
    else{
           for(int j=1; j<=n; j++){
           printf(" ");
          }
    }
    
    for(int j=1; j<=n; j++){
        printf("*");
    }
   
    printf("\n");

}
return 0;

}
